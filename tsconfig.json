{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "lib": [
    "dom",
    "dom.iterable",
    "ES2020"
  ],
  "include": ["src/**/*"],
  "exclude": ["src/dynamicImport.js"]
}
